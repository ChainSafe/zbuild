{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://github.com/chainsafe/zbuild/schemas/zbuild.json",
    "title": "zbuild Configuration",
    "description": "Configuration schema for zbuild.json, an opinionated build tool for Zig projects",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the project"
        },
        "version": {
            "type": "string",
            "description": "The version of the project (e.g., '1.2.3')"
        },
        "description": {
            "type": "string",
            "description": "A brief description of the project",
            "default": null
        },
        "keywords": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Keywords associated with the project",
            "default": null
        },
        "dependencies": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/dependency"
            },
            "description": "External dependencies of the project",
            "default": null
        },
        "options": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/option"
            },
            "description": "Build options configurable via command-line",
            "default": null
        },
        "options_modules": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/options_module"
            },
            "description": "Modules containing build options",
            "default": null
        },
        "modules": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/module"
            },
            "description": "Reusable code modules",
            "default": null
        },
        "executables": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/executable"
            },
            "description": "Executable targets to build",
            "default": null
        },
        "libraries": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/library"
            },
            "description": "Library targets to build",
            "default": null
        },
        "objects": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/object"
            },
            "description": "Object file targets to build",
            "default": null
        },
        "tests": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/test"
            },
            "description": "Test targets to build and run",
            "default": null
        },
        "fmts": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/fmt"
            },
            "description": "Code formatting configurations",
            "default": null
        },
        "runs": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/run"
            },
            "description": "Custom run commands",
            "default": null
        }
    },
    "required": ["name", "version"],
    "$defs": {
        "dependency": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Local filesystem path to the dependency"
                        }
                    },
                    "required": ["path"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "URL to fetch the dependency from",
                            "format": "uri"
                        }
                    },
                    "required": ["url"],
                    "additionalProperties": false
                }
            ],
            "description": "A dependency, specified by either a path or URL"
        },
        "option": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "boolean",
                            "description": "Default value for the boolean option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": ["bool"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "integer",
                            "description": "Default value for the integer option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": [
                                "i8", "u8", "i16", "u16", "i32", "u32", "i64", "u64", "i128", "u128",
                                "isize", "usize", "c_short", "c_ushort", "c_int", "c_uint",
                                "c_long", "c_ulong", "c_longlong", "c_ulonglong"
                            ],
                            "description": "Type of the integer option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "number",
                            "description": "Default value for the float option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": ["f16", "f32", "f64", "f80", "f128", "c_longdouble"],
                            "description": "Type of the float option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "string",
                            "description": "Default value for the enum option",
                            "default": null
                        },
                        "enum_options": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Possible values for the enum"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["enum"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type", "enum_options"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Default values for the enum list option",
                            "default": null
                        },
                        "enum_options": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Possible values for the enum list"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["enum_list"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type", "enum_options"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "string",
                            "description": "Default value for the string option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": ["string"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Default values for the list option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": ["list"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "string",
                            "description": "Default value for the build_id option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": ["build_id"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "string",
                            "description": "Default value for the lazy_path option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": ["lazy_path"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "default": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Default values for the lazy_path_list option",
                            "default": null
                        },
                        "type": {
                            "type": "string",
                            "enum": ["lazy_path_list"],
                            "description": "Type of the option"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the option",
                            "default": null
                        }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                }
            ],
            "description": "A build option configurable via command-line"
        },
        "options_module": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/option"
            },
            "description": "A collection of options bundled into a module"
        },
        "module": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the module",
                    "default": null
                },
                "root_source_file": {
                    "type": "string",
                    "description": "Path to the root source file",
                    "default": null
                },
                "imports": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of module or dependency names to import",
                    "default": null
                },
                "private": {
                    "type": "boolean",
                    "description": "Whether the module is private",
                    "default": null
                },
                "target": {
                    "type": "string",
                    "description": "Target triple or 'native'",
                    "default": null
                },
                "optimize": {
                    "type": "string",
                    "enum": ["Debug", "ReleaseSafe", "ReleaseFast", "ReleaseSmall"],
                    "description": "Optimization mode",
                    "default": null
                },
                "link_libc": {
                    "type": "boolean",
                    "description": "Link against libc",
                    "default": null
                },
                "link_libcpp": {
                    "type": "boolean",
                    "description": "Link against libcpp",
                    "default": null
                },
                "single_threaded": {
                    "type": "boolean",
                    "description": "Compile as single-threaded",
                    "default": null
                },
                "strip": {
                    "type": "boolean",
                    "description": "Strip debug info",
                    "default": null
                },
                "unwind_tables": {
                    "type": "string",
                    "enum": ["none", "sync", "async"],
                    "description": "Unwind tables mode",
                    "default": null
                },
                "dwarf_format": {
                    "type": "string",
                    "enum": ["32", "64"],
                    "description": "DWARF format",
                    "default": null
                },
                "code_model": {
                    "type": "string",
                    "enum": ["default", "tiny", "small", "kernel", "medium", "large"],
                    "description": "Code model",
                    "default": null
                },
                "stack_protector": {
                    "type": "boolean",
                    "description": "Enable stack protector",
                    "default": null
                },
                "stack_check": {
                    "type": "boolean",
                    "description": "Enable stack check",
                    "default": null
                },
                "sanitize_c": {
                    "type": "boolean",
                    "description": "Enable C sanitizer",
                    "default": null
                },
                "sanitize_thread": {
                    "type": "boolean",
                    "description": "Enable thread sanitizer",
                    "default": null
                },
                "fuzz": {
                    "type": "boolean",
                    "description": "Enable fuzzing",
                    "default": null
                },
                "valgrind": {
                    "type": "boolean",
                    "description": "Enable Valgrind support",
                    "default": null
                },
                "pic": {
                    "type": "boolean",
                    "description": "Position-independent code",
                    "default": null
                },
                "red_zone": {
                    "type": "boolean",
                    "description": "Enable red zone",
                    "default": null
                },
                "omit_frame_pointer": {
                    "type": "boolean",
                    "description": "Omit frame pointer",
                    "default": null
                },
                "error_tracing": {
                    "type": "boolean",
                    "description": "Enable error tracing",
                    "default": null
                }
            },
            "additionalProperties": false,
            "description": "A reusable code module"
        },
        "module_link": {
            "oneOf": [
                {
                    "type": "string",
                    "description": "Name of an existing module"
                },
                {
                    "$ref": "#/$defs/module"
                }
            ],
            "description": "Reference to a module by name or inline definition"
        },
        "executable": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the executable",
                    "default": null
                },
                "version": {
                    "type": "string",
                    "description": "Semantic version (e.g., '1.2.3')",
                    "default": null
                },
                "root_module": {
                    "$ref": "#/$defs/module_link",
                    "description": "Root module for the executable"
                },
                "linkage": {
                    "type": "string",
                    "enum": ["static", "dynamic"],
                    "description": "Linkage mode",
                    "default": null
                },
                "max_rss": {
                    "type": "integer",
                    "description": "Maximum resident set size in bytes",
                    "default": null
                },
                "use_llvm": {
                    "type": "boolean",
                    "description": "Use LLVM backend",
                    "default": null
                },
                "use_lld": {
                    "type": "boolean",
                    "description": "Use LLD linker",
                    "default": null
                },
                "zig_lib_dir": {
                    "type": "string",
                    "description": "Path to Zig library directory",
                    "default": null
                },
                "win32_manifest": {
                    "type": "string",
                    "description": "Path to Win32 manifest file",
                    "default": null
                },
                "depends_on": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Steps this executable depends on",
                    "default": null
                }
            },
            "required": ["root_module"],
            "additionalProperties": false,
            "description": "An executable target"
        },
        "library": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the library",
                    "default": null
                },
                "version": {
                    "type": "string",
                    "description": "Semantic version (e.g., '1.2.3')",
                    "default": null
                },
                "root_module": {
                    "$ref": "#/$defs/module_link",
                    "description": "Root module for the library"
                },
                "linkage": {
                    "type": "string",
                    "enum": ["static", "dynamic"],
                    "description": "Linkage mode",
                    "default": null
                },
                "max_rss": {
                    "type": "integer",
                    "description": "Maximum resident set size in bytes",
                    "default": null
                },
                "use_llvm": {
                    "type": "boolean",
                    "description": "Use LLVM backend",
                    "default": null
                },
                "use_lld": {
                    "type": "boolean",
                    "description": "Use LLD linker",
                    "default": null
                },
                "zig_lib_dir": {
                    "type": "string",
                    "description": "Path to Zig library directory",
                    "default": null
                },
                "win32_manifest": {
                    "type": "string",
                    "description": "Path to Win32 manifest file",
                    "default": null
                },
                "depends_on": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Steps this library depends on",
                    "default": null
                }
            },
            "required": ["root_module"],
            "additionalProperties": false,
            "description": "A library target"
        },
        "object": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the object",
                    "default": null
                },
                "root_module": {
                    "$ref": "#/$defs/module_link",
                    "description": "Root module for the object"
                },
                "max_rss": {
                    "type": "integer",
                    "description": "Maximum resident set size in bytes",
                    "default": null
                },
                "use_llvm": {
                    "type": "boolean",
                    "description": "Use LLVM backend",
                    "default": null
                },
                "use_lld": {
                    "type": "boolean",
                    "description": "Use LLD linker",
                    "default": null
                },
                "zig_lib_dir": {
                    "type": "string",
                    "description": "Path to Zig library directory",
                    "default": null
                },
                "depends_on": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Steps this object depends on",
                    "default": null
                }
            },
            "required": ["root_module"],
            "additionalProperties": false,
            "description": "An object file target"
        },
        "test": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the test",
                    "default": null
                },
                "root_module": {
                    "$ref": "#/$defs/module_link",
                    "description": "Root module for the test"
                },
                "max_rss": {
                    "type": "integer",
                    "description": "Maximum resident set size in bytes",
                    "default": null
                },
                "use_llvm": {
                    "type": "boolean",
                    "description": "Use LLVM backend",
                    "default": null
                },
                "use_lld": {
                    "type": "boolean",
                    "description": "Use LLD linker",
                    "default": null
                },
                "zig_lib_dir": {
                    "type": "string",
                    "description": "Path to Zig library directory",
                    "default": null
                },
                "filters": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Test filters",
                    "default": []
                },
                "test_runner": {
                    "type": "string",
                    "description": "Path to a custom test runner",
                    "default": null
                }
            },
            "required": ["root_module"],
            "additionalProperties": false,
            "description": "A test target"
        },
        "fmt": {
            "type": "object",
            "properties": {
                "paths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Paths to format",
                    "default": null
                },
                "exclude_paths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Paths to exclude from formatting",
                    "default": null
                },
                "check": {
                    "type": "boolean",
                    "description": "Check formatting without modifying files",
                    "default": false
                }
            },
            "additionalProperties": false,
            "description": "A code formatting configuration"
        },
        "run": {
            "type": "string",
            "description": "A command to execute"
        }
    }
}