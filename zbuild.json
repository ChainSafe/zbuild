{
  "name": "zbuild",
  "version": "0.1.0",
  "description": "An opionionated zig build tool",
  "executables": {
    "zbuild": {
      "root_module": {
        "root_source_file": "src/main.zig"
      }
    }
  },
  "tests": {
    "generate": {
      "root_module": {
        "root_source_file": "test/generate.zig",
        "imports": ["zbuild"]
      }
    }
  },
  "fmts": {
    "all": {
      "paths": ["src"]
    }
  }
}